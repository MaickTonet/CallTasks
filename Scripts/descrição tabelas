-- tabela chamado
COMMENT ON TABLE chamado IS 'Cadastro do chamado';
COMMENT ON COLUMN chamado.codcha IS 'Codigo do chamado';
COMMENT ON COLUMN chamado.empresacnpemp IS 'Chave estrangeira da empresa';
COMMENT ON COLUMN chamado.usuariocodusu IS 'Chave estrangeira do usuário';
COMMENT ON COLUMN chamado.databecha IS 'Data de abetura do chamado';
COMMENT ON COLUMN chamado.stcha IS 'Status do chamado';
-- departamento
COMMENT ON TABLE departamento IS 'Departamento do usuário ou técnico';
COMMENT ON COLUMN departamento.coddep IS 'Código do departamento';
COMMENT ON COLUMN departamento.cardep IS 'Cargo do usuário dentro do departamento';
-- empresa
COMMENT ON TABLE empresa IS 'Catalogo  da empresa';
COMMENT ON COLUMN empresa.cnpemp IS 'CNPJ da empresa';
COMMENT ON COLUMN empresa.nomemp IS 'Nome da empresa';
COMMENT ON COLUMN empresa.emaemp IS 'E-mail da empresa';
-- endereco emp
COMMENT ON TABLE endereço_empresa IS 'Endereço da empresa';
COMMENT ON COLUMN endereço_empresa.codendemp IS 'Código do endereço da empresa';
COMMENT ON COLUMN endereço_empresa.empresacnpemp IS 'Chave estrangeira da empresa';
COMMENT ON COLUMN endereço_empresa.cepend IS 'CEP da empresa';
COMMENT ON COLUMN endereço_empresa.ruaend IS 'Rua da empresa';
COMMENT ON COLUMN endereço_empresa.baiend IS 'Bairo da empresa';
COMMENT ON COLUMN endereço_empresa.cidend IS 'Cidade da empresa';
-- historico chama
OMMENT ON TABLE historico_chamado IS 'Histórico dos chamados';
COMMENT ON COLUMN historico_chamado.codhischa IS 'Código do histórico de chamados';
COMMENT ON COLUMN historico_chamado.datrescha IS 'Data de registro do chamado';
COMMENT ON COLUMN historico_chamado.resregcha IS 'Responsável pelo registro do chamado';
COMMENT ON COLUMN historico_chamado.descha IS 'Descrição do chamado';
-- telefone emp
COMMENT ON TABLE telefone_empresa IS 'Telefones de contato da empresa';
COMMENT ON COLUMN telefone_empresa.codtelemp IS 'Código dos telefones da empresa';
COMMENT ON COLUMN telefone_empresa.contelemp IS 'Telefone de contato da empresa';
COMMENT ON COLUMN telefone_empresa.pestelemp IS 'Telefone pessoal da empresa';
-- telef usu
COMMENT ON TABLE telefone_usuario IS 'Catalogo dos telefones dos usuários';
COMMENT ON COLUMN telefone_usuario.coditelusu IS 'Código dos telefones do usuário';
COMMENT ON COLUMN telefone_usuario.telpesusu IS 'Telefone pessoal';
COMMENT ON COLUMN telefone_usuario.telresusu IS 'Telefone residêncial do usuário';
-- tip chama
COMMENT ON TABLE tipo_chamado IS 'Tipo do chamado';
COMMENT ON COLUMN tipo_chamado.codcha IS 'Código do chamado';
COMMENT ON COLUMN tipo_chamado.gratipcha IS 'Grau do chamado ( ''U'' = urgente / ''M'' = moderado / ''P'' = pouco urgente )';
COMMENT ON COLUMN tipo_chamado.clatipcha IS 'Classe do chamado ( ''H'' = hardware / ''S'' = software )';

-- usuario
COMMENT ON TABLE usuario IS 'Cadastro de usuário';
COMMENT ON COLUMN usuario.cpfusu IS 'CPF do usuário';
COMMENT ON COLUMN usuario.nomusu IS 'Nome do usuário';
COMMENT ON COLUMN usuario.emausu IS 'E-mail do usuário';
